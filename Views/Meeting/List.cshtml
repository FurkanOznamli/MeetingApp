@model List<UserInfo>
@{
    ViewBag.Title = "Toplantı Katılım Listesi";
}

<main class="container my-5">

    <h1 class="display-6 text-center mb-4">Toplantıya Katılım Listesi</h1>

    <div class="card shadow-lg rounded-5 p-4">
        <div class="card-body">

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr class="table-light">
                        <th>Ad</th>
                        <th>Katılım Durumu</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int i = 0;
                    }

                    @foreach (var user in Model)
                    {
                        var durum = user.WillAttend == true ? "Evet" : "Hayır";
                        var className = user.WillAttend == true ? "table-success" : "table-danger";

                        if (user.WillAttend == true) { i++; }

                        <tr class="@className">
                            <td>@user.Name</td>
                            <td>@durum</td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-body text-center">
            <h5>Toplam Katılımcı Sayısı: <span class="badge bg-primary fs-4">@i</span></h5>
        </div>
    </div>

</main>
