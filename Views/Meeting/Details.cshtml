@model UserInfo
@{
    ViewBag.Title = "Başvuru Detayı";
}

@{
    var className = Model.WillAttend == true ? "success" : "danger";
}

<main class="container my-5 text-center">

    <div class="card shadow-lg rounded-5 p-4 mx-auto" style="max-width: 600px; width: 100%;">

        <h1 class="display-6 mb-4">Başvuru Detayı</h1>

        <p class="mb-4">
            <span class="badge text-bg-@className fs-5">
                @if (Model.WillAttend == true)
                {
                    <text>Katılıyor</text>
                }
                else
                {
                    <text>Katılmıyor</text>
                }
            </span>
        </p>

        <div class="mb-3">
            <p class="fs-5"><strong>İsim:</strong> @Model.Name</p>
            <p class="fs-5"><strong>Email:</strong> @Model.Email</p>
            <p class="fs-5"><strong>Telefon:</strong> @Model.Phone</p>
        </div>

        <div class="d-grid">
            <a asp-controller="Meeting" asp-action="List" class="btn btn-@className btn-lg">
                Katılımcı Listesi
            </a>
        </div>

    </div>

</main>
